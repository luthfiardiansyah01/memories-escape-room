{
  "compilerOptions": {

    "target": "ES2020",

    "module": "ESNext",

    "moduleResolution": "bundler",

    "strict": true,

    "composite": true,

    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"]
    },

    "types": ["node", "express"],

    "allowJs": true,

    "resolveJsonModule": true,

    "skipLibCheck": true,

    "isolatedModules": true

  },

  "include": [

    "src",

    "api",

    "db"

  ],

  "exclude": [

    "node_modules",

    "dist"

  ]
}