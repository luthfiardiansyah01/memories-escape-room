{
  "compilerOptions": {

    "target": "ES2020",

    "module": "ESNext",

    "moduleResolution": "bundler",

    "strict": true,

    "composite": true,

    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",

    "paths": {
      "@/*": ["src/*"]
    },

    "types": ["node"],

    "resolveJsonModule": true,

    "esModuleInterop": true,

    "skipLibCheck": true,

    "ignoreDeprecations": "6.0"

  },

  "include": [

    "src",

    "api",

    "db",

    "drizzle.config.ts"

  ],

  "exclude": [

    "node_modules",

    "dist"

  ]
}